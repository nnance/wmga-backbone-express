<div class="page-header">
  <h1><%= isNew ? 'Add new' : 'Edit' %> member</h1>
</div>
<form method="POST" role="form">
    <div id="alert"></div>
    <fieldset id="required">
        <legend>Required Information</legend>
        <div class="form-group">
            <label>First Name</label>
            <input class="form-control" type="text" name="firstname" value="<%= firstname %>"/>
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <input class="form-control" type="text" name="lastname" value="<%= lastname %>"/>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" type="text" name="email" value="<%= email %>"/>
        </div>
    </fiedlset>
    <fieldset id="additional">
        <legend>Additional Information</legend>
        <div class="form-group">
            <label>Street Address</label>
            <input class="form-control" type="text" name="address" value="<%= address %>"/>
        </div>
        <div class="form-group">
            <label>City, State Zip</label>
            <input class="form-control" type="text" name="address2" value="<%= address2 %>"/>
        </div>
        <div class="form-group">
            <label>Phone</label>
            <input class="form-control" type="text" name="phone" value="<%= phone %>"/>
        </div>
        <div class="form-group">
            <label>Alt Phone</label>
            <input class="form-control" type="text" name="altphone" value="<%= altphone %>"/>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label >Birth Date</label>
                    <div class="input-group" id="birthdatepicker">
                        <input class="form-control" type="text" name="birthdate" value="<%= birthdate %>">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
    <fieldset>
        <legend>Profile Picture</legend>
        <div class="form-group">
            <label for="attachedfile">File Name</label>
            <input type="file" id="picture">
        </div>
    </fieldset>
    <div class="form-actions">
        <a id="save-button" class="btn btn-primary">Save changes</a>
        <a id="cancel-button" class="btn btn-default">Cancel</a>
    </div>
</form>
<div class="row status-bar">
    <div class="span9">
        <div class="alert alert-success" style="display: none">
            <b>Success!</b> Record saved successfully
        </div>
    </div>
</div>
